extends ./partials/default

block title
  title El equipo de los candidatos | Especiales Datasketch

block css
  link(rel="stylesheet", href="assets/css/post.css")

block main
  .spacer
  main.fill
    .post-container
      h1.post-title El equipo de los candidatos
      .font-exo
        p Lorem ipsum dolor sit amet consectetur adipisicing elit. Quidem officiis quas dolor voluptatibus aliquam, quisquam incidunt asperiores sunt corporis? Vel perferendis velit a quisquam iusto ipsam qui amet, nisi quasi sunt. Tempora iusto aliquam molestiae perferendis aut nam commodi. Iusto repellendus quibusdam voluptatem beatae! Recusandae cupiditate aliquid distinctio eveniet non!
        #info
          template(v-if="!loading")
            .candidate-info(v-for="(candidate, index) in candidates" :key="index")
              p.post-subtitle {{ candidate.name }}
              p {{ candidate.description }}
              template(v-for="(player, index) in candidate.team" :key="index")
                button.accordion.font-press.line.justify-between(@click="togglePanel($event, candidate, player)", :style="{ marginBottom: index === (candidate.team.length - 1) ? '20px': '0px' }")
                    small {{ player.name }}
                    small {{ player.opened ? '-' : '+' }}
                .panel(:data-panel="index"): p {{ player.description }}
        #disqus_thread

block js
  script(src="assets/js/disqus.js")
  script(src="vendors/tabletop.min.js")
  script(src="vendors/vue.min.js")
  script(src="assets/js/post.js")
  script(src="assets/js/fetch.js")