			a(href='') App
			img(src="assets/media/aguacate.png", alt="Aguacate")
	section.full.background.flex.flex--wrap.parallax(style='background-image: url(assets/media/triada.jpg);')
		.text-white.story.self-center
			h1.text-size-xx-large Recetas por regiones
			a.text-white(href='recetas-regiones.html') Ver más
		.text-white.story.self-center
